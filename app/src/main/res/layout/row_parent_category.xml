<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relativeGallery"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/size_10dp"
        android:layout_height="wrap_content">

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.app.headyecommerceapp.customClasses.ShapedImageView
                android:id="@+id/imgRow"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                app:layout_aspectRatio="174%"
                app:layout_widthPercent="100%"
                app:round_radius="5dp"
                android:src="@drawable/electonicappliances"
                app:shape_mode="round_rect" />


        </android.support.percent.PercentRelativeLayout>

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/pl_mainlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.app.headyecommerceapp.customClasses.ShapedImageView

                android:layout_width="0dp"
                android:layout_height="0dp"
                android:alpha="0.4"
                android:scaleType="centerCrop"
                android:src="@drawable/rounded_button"
                app:layout_aspectRatio="174%"
                app:layout_widthPercent="100%"
                app:round_radius="5dp"
                app:shape_mode="round_rect" />


        </android.support.percent.PercentRelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:padding="@dimen/size_10dp"
                android:text="Electronics"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="@dimen/size_18sp" />



        </LinearLayout>
    </RelativeLayout>

</LinearLayout>